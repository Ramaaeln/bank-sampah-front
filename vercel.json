{
    "version": 2,
    "builds": [
      { "src": "be/src/server.js", "use": "@vercel/node" },
      { "src": "*.html", "use": "@vercel/static" },
      { "src": "css/**", "use": "@vercel/static" },
      { "src": "js/**", "use": "@vercel/static" },
      { "src": "image/**", "use": "@vercel/static" }
    ],
    "rewrites": [
      { "source": "/api/(.*)", "destination": "/be/src/server.js" },
      { "source": "/(.*)", "destination": "/$1" }
    ]
  }